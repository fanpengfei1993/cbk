<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.day0620_chabaike.ui.VersionActivity">

    <include
        android:id="@+id/more_toolbar"
        layout="@layout/toolbar_our" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@mipmap/logocha" />
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="买买茶.查百科"
        android:textSize="30sp"
        android:gravity="center"
        />
    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="version:1.1"
        android:textSize="18sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="copyright@2010-2013 MaiMaiCha.cn"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="买买茶 版权所有"
        android:textSize="23sp"
        android:gravity="center_horizontal"/>

</LinearLayout>
